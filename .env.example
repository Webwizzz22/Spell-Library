# SpellAcademia Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Application Configuration
VITE_APP_NAME=SpellAcademia
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="The Ultimate Harry Potter Learning Experience"

# API Configuration
# VITE_API_URL=https://api.spellacademia.com
# VITE_API_VERSION=v1

# Authentication (if implementing user accounts)
# VITE_AUTH_DOMAIN=your-auth-domain.com
# VITE_AUTH_CLIENT_ID=your-client-id
# VITE_AUTH_CLIENT_SECRET=your-client-secret

# Database Configuration (if using external database)
# DATABASE_URL=your-database-url
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=spellacademia
# DB_USER=your-username
# DB_PASS=your-password

# External APIs
# Harry Potter API (if using external data)
# VITE_HP_API_URL=https://hp-api.herokuapp.com/api
# VITE_HP_API_KEY=your-api-key

# Music/Audio Services
# VITE_SPOTIFY_CLIENT_ID=your-spotify-client-id
# VITE_YOUTUBE_API_KEY=your-youtube-api-key

# Analytics (optional)
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Error Reporting
# VITE_SENTRY_DSN=your-sentry-dsn

# Storage (if using cloud storage for images/audio)
# VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
# VITE_AWS_S3_BUCKET=your-s3-bucket
# VITE_AWS_ACCESS_KEY_ID=your-access-key
# VITE_AWS_SECRET_ACCESS_KEY=your-secret-key

# Development
VITE_DEV_MODE=true
# VITE_DEBUG_ANIMATIONS=false
# VITE_SHOW_PERFORMANCE_METRICS=false

# Feature Flags
VITE_ENABLE_SOUND=true
VITE_ENABLE_PARTICLES=true
VITE_ENABLE_ANIMATIONS=true
# VITE_ENABLE_MULTIPLAYER=false
# VITE_ENABLE_AR_FEATURES=false

# Social Media Integration
# VITE_FACEBOOK_APP_ID=your-facebook-app-id
# VITE_TWITTER_API_KEY=your-twitter-api-key
# VITE_DISCORD_CLIENT_ID=your-discord-client-id

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# CDN Configuration
# VITE_CDN_URL=https://cdn.spellacademia.com
# VITE_ASSETS_URL=https://assets.spellacademia.com

# Security
# JWT_SECRET=your-jwt-secret
# ENCRYPTION_KEY=your-encryption-key
# CORS_ORIGIN=http://localhost:3000

# Performance
# VITE_PARTICLE_COUNT=50
# VITE_ANIMATION_DURATION=1000
# VITE_CACHE_DURATION=3600
